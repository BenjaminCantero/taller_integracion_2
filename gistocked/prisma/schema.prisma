generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Rol {
  id            Int @id @default(autoincrement())
  rol           String @unique
  administradores Administradores[]
  vendedores    Vendedores[]
}

model Administradores {
  id                       Int @id @default(autoincrement())
  rol                      Int
  nombre                   String
  correo                   String @unique
  contrasena               String
  vendedoresSupervisados   Int

  role Rol @relation(fields: [rol], references: [id])
  vendedoresAsociados Vendedores[] @relation("AdministradorVendedores")
}

model Vendedores {
  id                       Int @id @default(autoincrement())
  rol                      Int
  nombre                   String
  correo                   String @unique
  contrasena               String
  administradorAsociado    Int?

  role Rol @relation(fields: [rol], references: [id])
  administrador Administradores? @relation("AdministradorVendedores", fields: [administradorAsociado], references: [id])
}