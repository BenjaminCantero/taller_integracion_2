datasource db {
  provider = "mysql" // Puedes cambiarlo a "postgresql", "sqlite", etc., según tu base de datos
  url      = env("DATABASE_URL") // Asegúrate de configurar la variable de entorno DATABASE_URL en tu archivo .env
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       Int     @id @default(autoincrement())
  name     String
  category String
  quantity Int
  price    Float
}

model User {
  id        Int     @id @default(autoincrement())
  name      String?
  email     String  @unique
  password  String
  role      String  @default("user") // Opcional, para roles de usuario
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
