// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int      @id @default(autoincrement())
  image          String
  barcode        String
  name           String
  description    String
  category       String
  purchasePrice  Float
  salePrice      Float
  netPrice       Float
  finalSalePrice Float
  percentageSale Float
}
